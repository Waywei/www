extends base/layout
block title
  title {{user.username}} | {{config.BASETITLE}} 
block head
block main
  #main

    .breadcrumb
      a(href="/") {{config.BASETITLE}}
      |  >  
      a(href="/member/{{user.id}}") {{user.username | e}}
      |  >  
      span 个人资料
    #content
      include base/flash.html
      include member/cover
      .box
        .box-title
          | 介绍
        .box-content
          .mitem 
            p {{user.description|e}}
      .box
        .box-title
          | 相关链接
        .box-content

          .mitem
            if user.weixin
              p
                .fa.fa-wechat 
                span {{user.weixin|e}}
            if user.other1
              p
                .fa.fa-qq 
                span {{user.other1|e}}
            if user.website
              p.link
                a(href="{{user.website|e}}",target="_blank")
                  .fa.fa-cloud  
                  {{user.website|e}}
            if user.weibo
              p.link
                .fa.fa-weibo
                a(href="{{user.weibo|e}}",target="_blank") {{user.weibo|e}}

            if user.instagram
              p.link
                .fa.fa-instagram
                a(href="{{user.instagram|e}}",target="_blank") {{user.instagram|e}}

            if user.flickr
              p.link
                .fa.fa-flickr
                a(href="{{user.flickr|e}}",target="_blank") {{user.flickr|e}}

            if user.twitter
              p.link
                .fa.fa-twitter
                a(href="{{user.twitter|e}}",target="_blank") {{user.twitter|e}}

            if user.renren
              p.link
                .fa.fa-renren
                a(href="{{user.renren|e}}",target="_blank") {{user.renren|e}}

            if user.facebook
              p.link
                .fa.fa-facebook
                a(href="{{user.facebook|e}}",target="_blank") {{user.facebook|e}}
      if looking
        .box#looking-info
          .box-title 真是照片信息
          .box-content
            .looking-info

              p
                img(src="http://bearwave.qiniudn.com/{{looking.photo}}-looking")
              
              p
                i.fa.fa-database
                span {{looking.age}}岁-{{looking.height}}cm-{{looking.weight}}kg
              p
                i.fa.fa-heart
                span 喜欢的类型:
                  if looking.like == 0
                    |  全部
                  if looking.like == 1
                    |  偏瘦
                  if looking.like == 2
                    |  偏胖
                  if looking.like == 3
                    |  很重
              h3 简单介绍
              p  {{looking.info}}
              .line
              h4 最喜欢做的三件事
              p {{looking.question1}}
              h4 最喜欢的三个音乐人，乐队
              p {{looking.question2}}
              h4 受到影响最多的三部电影
              p {{looking.question3}}
              h4 受到影响最多的三本书
              p {{looking.question4}}
              h4 未来必将发生的三件事
              p {{looking.question5}}
              h4 未来绝不会发生的三件事
              p {{looking.question6}}



    #aside
      include base/my
