{% from "_formhelper.html" import render_field %}
extends base/layout
block title 
  title {{config.BASETITLE}} - 重置密码
block main
  #main
    .breadcrumb
      a(href="/") {{config.BASETITLE}}
      |  >  
      span  重置密码
    #content
      include base/flash.html
      .box
        .box-title
          | 重置密码
        .box-content
          .regform
            form.light-form(action="/resetpassword/{{uid}}",method="POST")
              {{form.csrf_token }}
              .group 
                .text 您的账号:
                .input-item 
                  input(typy="text",disabled="disabled",value="{{mail}}")
              {{render_field(form.password) }}
              {{render_field(form.confirm) }}
              if error
                .group
                  .text  
                  .input-item
                    .errorrs
                      {{error}}

              .group
                .text  
                .input-item
                  button.light-btn.btn1 提交
    #aside
      include base/my
