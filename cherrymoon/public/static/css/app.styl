m1 = #57AD69
m2 = #60BF73

f1 = #3f484f
f2 = #9fa3a7

b1 = #F8F9F2
b2 = #e2e5e9

.align-right 
  text-align right

br
  clear both
body
  font-size 14px
  font-family "Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif
  background b1
  color f1
a
  color #787878
  text-decoration none
  &:hover
    color m1
.inner
  width 960px
  margin 0 auto
  clearfix()
#main
  width 960px
  margin 0px auto
  clearfix()
#content      
  padding 0px 10px
  width 650px
  float left
#aside
  background none
  padding 0px 10px
  width 270px
  float right
  .box-content
    padding 10px
    font-size 12px
    p
      margin 0px
      margin-bottom 5px
    ul
      list-style none
      padding 0px
      li
        margin 5px 0px
 .breadcrumb
  font-size 12px
  padding 10px 
  color f2
  a
    &:hover
      color f1

.light-btn .fa
  margin-left 0px
.fa
  margin-right 5px
.box
  margin-bottom 20px
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.1)
  border-radius 3px
  background #fff
  .box-title
    //font-weight bold
    font-size 12px
    padding 10px
    border-bottom 1px solid #f2f2f2
    a
      float right
      color m1
  .box-content
    background none
  .box-footer
    border-top 1px solid #f2f2f2
    padding 10px
.main-content
  line-height 170%
  a
    text-decoration underline
.fa-1
  font-size 14px
.fa-2
  font-size 16px
.fa-3
  font-size 20px
.fa-4
  font-size 32px
.header
  background #fff
  font-weight bold
  min-width 960px
  clearfix()
  .nav
    ul
      list-style none
      margin 0px
      padding 0px
      li
        float left
        a
          display block
          padding 12px 20px
          border-right 1px solid #f2f2f2
          &:hover
            background m1
            color #fff
  .userpanel
      float right
      text-align right
      list-style none
      margin 0px
      padding 0px
      a
        display inline-block
        padding  10px
        img
          width 20px
          border-radius 100%
          vertical-align bottom

.my
  img
    border-radius 100%
    width 100px
.find-members
  margin 10px
.members
  clearfix()
  .member
    width 300px
    display inline-block
    background #fff
    border-radius 5px
    margin 5px
    position relative
    img
      width 100%
      display block
    .info
      width 100%
      background rgba(0,0,0,0.3)
      position absolute
      bottom 0px
      left 0px
      text-align left
      font-size 11px
      color #fff
      p
        margin 5px
        padding 0px 5px


.flashes
  margin-bottom 10px
  div
    position relative
    .close
      display none
      width 16px
      height 16px
      text-align center
      line-height 16px
      background #fff
      position absolute
      right 10px
      top 6px
      cursor pointer
.warning
  background #f2dede
  color #b94a48
  border 1px solid #eed3d7
  padding 5px 10px
  font-size 12px
  border-radius 1px

.success
  background #dff0d8
  color #468847
  border 1px solid #d6e9c6
  padding 5px 10px
  font-size 12px
  border-radius 1px

.page
  clearfix()
  padding 20px 0px
  .left
    float left
  .right 
    float right
a.light-btn
  color #333

.btn1
  background m1
  color #fff!important
.btn2
  background #777
  color #fff!important
.imgly
  max-width 100%
embed
  width 100%

.allnode
  clearfix()
  br
    clear both
  .item
    background b1
    margin 10px
    padding 10px
    position relative
    border-radius 5px
    width 165px
    float left
    h3
      margin 5px
      a
        margin-right 5px
    .time
      font-weight 100
      color f2
    p
      font-size 11px
      margin 5px
.usergrid
  .item
    padding 5px 
    margin 10px
    display inline-block
    max-width 100px
    overflow hidden
    max-height 130px
    text-align center
    img
      border-radius 5px

.tip
  background #f2f2f2
  padding 15px 
  margin 10px 0px
.talkcover
    background-color #999
    background-size cover
    background-position 50% 50%
    min-width 960px
    min-height 500px
    position relative
    .title
      text-align center
      box-sizing border-box
      position absolute
      bottom 0px
      left 50%
      width 700px
      padding 20px
