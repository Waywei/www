          display inline-block
          padding 5px 10px
          background #fff
          margin 5px
          border-radius 3px
          &:hover
            background m1
            color #fff
#interview
  max-width 700px
  margin 0 auto
  .item
    padding 20px
    clearfix()
    .avatar
      width 160px
      float left
    .detail
      margin-left 200px
