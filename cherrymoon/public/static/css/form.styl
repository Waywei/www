input,
textarea
  width 100%
  padding 0.5em 0.6em
  display inline-block
  border 1px solid #ccc
  box-shadow inset 0 1px 3px #ddd
  border-radius 4px
  -webkit-transition 0.3s linear border
  -moz-transition 0.3s linear border
  -ms-transition 0.3s linear border
  -o-transition 0.3s linear border
  transition 0.3s linear border
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  &focus
    outline 0
    outline thin dotted \9 /* IE6-9 */
    border-color #129FEA

input:focus, 
textarea:focus,
select:focus
    outline 0
      
select
  background #fff 
  border 1px solid #cccccc
  padding 0.5em 0.6em
  box-shadow inset 0 1px 3px #ddd
  border-radius 4px
  box-sizing border-box
.light-form
  font-size 0.8em
  .expand
    width 100%
  .radio
    cursor pointer
    input
      width auto
      margin-right 10px
      box-shadow none
  .checkbox
    cursor pointer
    input
      width auto
      margin-right 10px
      box-shadow none

  .file
    width 100%
    position relative
    display inline-block
    cursor pointer
    input
      margin 0
      opacity 0
    span.file-text
      position absolute
      top 0
      right 0
      left 0
      border 1px solid #ccc
      box-shadow inset 0 1px 3px #ddd
      border-radius 4px
      z-index 5
      padding .5em .6em
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none
    span.file-icon
      position absolute
      top 1px
      right 0
      background #f2f2f2
      padding .5em 1.6em
  .group
    clearfix()
    margin-bottom 10px
    .text
      width 170px
      padding-right 20px
      float left
      text-align right
      margin-top 5px
    .input-item
      float left
      width 350px
    .errors
      margin-top 5px
      float left
      color #f00
    .tips
      padding-left 190px
      color #999

@media (max-width:767px)
  .light-form
    .group
      .tips
        padding-left 0px

